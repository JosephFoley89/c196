<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.CourseDetailActivity">

    <ScrollView
        android:layout_width="408dp"
        android:layout_height="591dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="397dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:text="ID:"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/courseID"
                    android:layout_width="261dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="text"
                    android:text=""
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="397dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_marginStart="4dp"
                    android:text="Title:"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <EditText
                    android:id="@+id/courseName"
                    android:layout_width="264dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text=""
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/courseID"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="397dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_marginStart="4dp"
                    android:text="Start:"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <EditText
                    android:id="@+id/courseStart"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="text"
                    android:text=""
                    app:layout_constraintStart_toEndOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/courseName"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/datePickerIcon"
                    android:layout_width="56dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/assessmentName"
                    app:srcCompat="@drawable/ic_baseline_calendar_month_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="398dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_marginStart="4dp"
                    android:text="End:"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <EditText
                    android:id="@+id/courseEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="text"
                    android:text=""
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    app:layout_constraintTop_toBottomOf="@+id/courseStart"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/datePickerIcon2"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/assessmentName"
                    app:srcCompat="@drawable/ic_baseline_calendar_month_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="399dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:text="Status:"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <Spinner
                    android:id="@+id/courseStatus"
                    android:layout_width="258dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text=""
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@+id/textView6"
                    app:layout_constraintTop_toBottomOf="@+id/courseEnd"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="397dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:text="Term:"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <Spinner
                    android:id="@+id/courseTerm"
                    android:layout_width="258dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text=""
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/courseStatus"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="397dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView89"
                    android:layout_width="397dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:text="Instructor Information:"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="397dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:text="Name:"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <EditText
                    android:id="@+id/instructorName"
                    android:layout_width="256dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text=""
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@+id/textView8"
                    app:layout_constraintTop_toBottomOf="@+id/courseTerm"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="397dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:text="Email:"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <EditText
                    android:id="@+id/instructorEmail"
                    android:layout_width="256dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text=""
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@+id/textView8"
                    app:layout_constraintTop_toBottomOf="@+id/courseTerm"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="397dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:text="Phone:"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <EditText
                    android:id="@+id/instructorPhone"
                    android:layout_width="256dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text=""
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@+id/textView8"
                    app:layout_constraintTop_toBottomOf="@+id/courseTerm"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/notes"
                    android:layout_width="385dp"
                    android:layout_height="101dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="397dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/submitTerm"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="10dp"
                    android:onClick="submitCourse"
                    android:text="Submit"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9" />

                <Button
                    android:id="@+id/deleteTerm"
                    android:layout_width="175dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="10dp"
                    android:onClick="deleteCourse"
                    android:text="Delete Course"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/assessmentCourse" />

                <Button
                    android:id="@+id/share"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="9dp"
                    android:onClick="shareNotes"
                    android:text="Share"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/assessmentCourse" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="397dp"
                android:layout_height="352dp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/courseAssessmentRV"
                    android:layout_width="379dp"
                    android:layout_height="932dp"
                    android:layout_margin="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/deleteTerm"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/submitTerm"
                    app:layout_constraintTop_toBottomOf="@+id/submitTerm"
                    app:layout_constraintVertical_bias="0.0" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>